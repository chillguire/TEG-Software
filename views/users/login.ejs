<%- include ('../partials/head') -%>

    <body class="bg-gradient-secondary">

        <div class="container">

            <div class="row justify-content-center">

                <div class="col-xl-10 col-lg-12 col-md-9">

                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <div class="row">
                                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Log in</h1>
                                        </div>

                                        <%- include ('../partials/flash') -%>
                                            <form action="/login" method="post" class="user needs-validation"
                                                novalidate>

                                                <div class="form-group">
                                                    <label for="validationCustom01">E-mail</label>
                                                    <input type="email" name="username"
                                                        class="form-control form-control-user" id="validationCustom01"
                                                        aria-describedby="email" placeholder="E-mail" required>
                                                    <div class="valid-feedback">
                                                        Looks good!
                                                    </div>
                                                    <div class="invalid-feedback">
                                                        E-mail is not valid
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label for="validationCustom02">Password</label>
                                                    <input type="password" name="password"
                                                        class="form-control form-control-user" id="validationCustom02"
                                                        placeholder="Password" required>

                                                    <div class="valid-feedback">
                                                        Looks good!
                                                    </div>
                                                    <div class="invalid-feedback">
                                                        Password is not valid
                                                    </div>
                                                </div>

                                                <button class="btn btn-primary btn-user btn-block" type="submit">Log
                                                    in</button>

                                            </form>


                                            <hr>
                                            <div class="text-center">
                                                <a class="small" href="/register">Create an Account!</a>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

        <%- include ('../partials/scripts') -%>